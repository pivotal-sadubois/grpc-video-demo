  <modelVersion>4.0.0</modelVersion>
  <groupId>ch.fortidemo</groupId>
  <artifactId>grpc-video-server</artifactId>
  <name>grpc-video-server</name>
  <version>1.0</version>
  <description>Demo project for Spring Boot</description>
  <developers>
    <developer />
  </developers>
  <licenses>
    <license />
  </licenses>
  <scm />
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.4</version>
        <executions>
          <execution>
            <id>client-fat-jar</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <finalName>grpc-video-server</finalName>
              <transformers>
                <transformer>
                  <mainClass>ch.fortidemo.grpcvideoserver.VideoServerApplication</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>3.0.0-M7</version>
        <configuration>
          <includes>
            <include>**/*Test.java</include>
          </includes>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.xolstice.maven.plugins</groupId>
        <artifactId>protobuf-maven-plugin</artifactId>
        <version>0.6.1</version>
        <executions>
          <execution>
            <goals>
              <goal>compile</goal>
              <goal>compile-custom</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <protocArtifact>com.google.protobuf:protoc:3.21.12:exe:osx-x86_64</protocArtifact>
          <pluginId>grpc-java</pluginId>
          <pluginArtifact>io.grpc:protoc-gen-grpc-java:1.56.1:exe:osx-x86_64</pluginArtifact>
        </configuration>
      </plugin>
    </plugins>
  </build>
